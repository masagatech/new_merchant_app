<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    tools:context="com.goyo.parent.forms.expense">

    <Spinner
        android:layout_margin="20dp"
        android:id="@+id/expense_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        float:fletPaddingBottom="10dp"
        float:fletTextAppearance="@style/floatlabelededittext2">
        <EditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_cash_collection"
            android:gravity="top"
            android:id="@+id/exp_value"
            android:hint="Value"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:lines="10"
            android:padding="10dp" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <LinearLayout
        android:id="@+id/cover"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_cash_collection"
        android:layout_width="match_parent"
        android:layout_below="@+id/remark_form"
        android:layout_height="wrap_content">
        <com.pchmn.materialchips.ChipsInput
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chip"
            app:deletable="true"
            app:hint="  Select Tags" />
    </LinearLayout>


    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/remark_head"
        float:fletPaddingBottom="10dp"
        float:fletTextAppearance="@style/floatlabelededittext2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/border_cash_collection"
            android:gravity="top"
            android:id="@+id/exp_disc"
            android:hint="Discription"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:lines="10"
            android:padding="10dp" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>





</LinearLayout>

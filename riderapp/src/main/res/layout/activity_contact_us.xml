<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.goyo.parent.forms.ContactUS">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/name_form"
            float:fletPaddingBottom="10dp"
            float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:hint="Name" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name_form"
            android:id="@+id/company_form"
            float:fletPaddingBottom="10dp"
            float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/campany_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:hint="Company Name" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/number_form"
            android:layout_below="@id/company_form"
            float:fletPaddingBottom="10dp"
            float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:hint="Contact Number"
                    android:inputType="number"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_form"
            android:id="@+id/remark_form"
            float:fletPaddingBottom="10dp"
            float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/remarks"
                    android:background="@drawable/border_cash_collection"
                    android:layout_height="150dp"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:inputType="textMultiLine"
                    android:hint="Remark.."
                    android:gravity="top" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>




        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/send_form"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/orange_light"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>
